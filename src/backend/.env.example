# APPLICATION SETTINGS
#----------------------------------------------------------------------------------
# Core application configuration
APP_NAME="Student Admissions Enrollment Platform"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=America/New_York
APP_LOCALE=en
ASSET_URL=null

#----------------------------------------------------------------------------------
# DATABASE SETTINGS
#----------------------------------------------------------------------------------
# Primary database connection
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=admissions_platform
DB_USERNAME=root
DB_PASSWORD=
DB_SOCKET=
DB_FOREIGN_KEYS=true

# Read/write splitting for high traffic (optional)
DB_READ_HOST1=127.0.0.1
DB_READ_HOST2=127.0.0.1
DB_WRITE_HOST=127.0.0.1

#----------------------------------------------------------------------------------
# REDIS SETTINGS
#----------------------------------------------------------------------------------
# Redis configuration for caching, sessions, and queues
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_SESSION_DB=2
REDIS_QUEUE_DB=3
REDIS_PREFIX=admissions_

#----------------------------------------------------------------------------------
# QUEUE SETTINGS
#----------------------------------------------------------------------------------
# Queue configuration for background processing
QUEUE_CONNECTION=redis
QUEUE_WORKERS=2
DOCUMENT_QUEUE_WORKERS=2
INTEGRATION_QUEUE_WORKERS=1

# Laravel Horizon settings (queue monitoring)
HORIZON_ENABLED=true
HORIZON_DASHBOARD_AUTH=true
HORIZON_NOTIFICATION_EMAIL=admin@example.com
HORIZON_METRICS_RETENTION_PERIOD=1440

#----------------------------------------------------------------------------------
# MAIL SETTINGS
#----------------------------------------------------------------------------------
# Email configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=admissions@institution.edu
MAIL_FROM_NAME="Student Admissions"
MAIL_REPLY_TO_ADDRESS=admissions@institution.edu
MAIL_REPLY_TO_NAME="Admissions Office"
MAIL_LOG_CHANNEL=stack
MAIL_QUEUE=emails
MAIL_QUEUE_CONNECTION=redis
MAIL_TRACKING_PIXEL_URL=null

#----------------------------------------------------------------------------------
# AWS SETTINGS
#----------------------------------------------------------------------------------
# Amazon Web Services configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_DOCUMENTS_BUCKET=
AWS_URL=
AWS_ENDPOINT=null
AWS_USE_PATH_STYLE_ENDPOINT=false

#----------------------------------------------------------------------------------
# FILESYSTEM SETTINGS
#----------------------------------------------------------------------------------
# Default filesystem disk (local, s3, etc.)
FILESYSTEM_DISK=s3

#----------------------------------------------------------------------------------
# SESSION SETTINGS
#----------------------------------------------------------------------------------
# Session configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_CONNECTION=sessions
SESSION_COOKIE=admissions_session
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=true

#----------------------------------------------------------------------------------
# CACHE SETTINGS
#----------------------------------------------------------------------------------
# Cache configuration
CACHE_DRIVER=redis

#----------------------------------------------------------------------------------
# LOGGING SETTINGS
